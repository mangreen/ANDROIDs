package com.iiiesti.walkmap.customType;


public class Direction_Constant {
	/* Simple mapping */
	public static int travelModeTranslator(String travelMode)
	{
		if(travelMode.equals(TRAVEL_KEY_WALKING))
			return TRAVEL_MODE_WALKING;
		else if(travelMode.equals(TRAVEL_KEY_VIRTUAL))
			return TRAVEL_MODE_VIRTUAL;
		else
			return TRAVEL_MODE_MT;
	}
	
	/* Constants */
	
	/** Direction key */	
	public static final String TRAVEL_KEY_WALKING = "WALKING";
	public static final String TRAVEL_KEY_VIRTUAL = "VIRTUAL";
	
	/** Direction type */	
	public static final int TRAVEL_MODE_WALKING = 0;
	public static final int TRAVEL_MODE_VIRTUAL = 1;
	public static final int TRAVEL_MODE_MT = 2;

